# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database (configure with real production database)
DATABASE_URL=postgresql://prod_user:prod_password@prod-host:5432/appointment_prod_db?schema=public

# AWS Production Configuration
AWS_REGION=us-east-1
# AWS credentials should be provided via IAM roles or environment variables
# AWS_ACCESS_KEY_ID= # Leave empty to use IAM roles or default credential chain
# AWS_SECRET_ACCESS_KEY= # Leave empty to use IAM roles or default credential chain

# SQS Configuration for Production
SQS_APPOINTMENT_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/922718141192/appointment-production-queue
SQS_APPOINTMENT_DLQ_URL=https://sqs.us-east-1.amazonaws.com/922718141192/appointment-production-queue-dlq

# Redis Configuration (configure with real Redis instance)
REDIS_HOST=production-redis-endpoint
REDIS_PORT=6379
REDIS_PASSWORD=production_redis_password

# Security & Rate Limiting
CORS_ORIGIN=https://your-production-domain.com
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# SQS Tuning for Production
SQS_VISIBILITY_TIMEOUT=300
SQS_BATCH_SIZE=10
SQS_WAIT_TIME=20
SQS_MAX_RECEIVE_COUNT=3

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-monitoring-endpoint.com
CORRELATION_ID_HEADER=x-correlation-id